{
    "scrollbar": {
        "cursors": false,
        "git_diff": false,
        "diagnostics": "none",
        "selected_text": false,
        "search_results": false,
        "selected_symbol": false,
        "axes": { "horizontal": false },
    },
    "agent": {
        "dock": "left",
        "button": false,
        "default_model": {
            "provider": "ollama",
            "model": "deepseek-coder-v2:latest",
        },
    },
    "project_panel": {
        "button": false,
        "auto_fold_dirs": false,
        "show_diagnostics": "all",
    },
    "tab_bar": {
        "show_tab_bar_buttons": false,
        "show_nav_history_buttons": false,
    },

    // Overwrite the standard formatting to convert tabs to 4 spaces so the
    // source files align with in-editor configuration. Current file buffer is
    // read by STDIN -> STDOUT.
    "languages": {
        "Go": {
            "formatter": {
                "external": {
                    "command": "bash",
                    "arguments": [
                        "-lc",
                        "buf=$(cat); out=$(printf '%s' \"$buf\" | gofmt -s); [ $? -eq 0 ] && printf '%s' \"$out\" | expand -t 4 || printf '%s' \"$buf\"",
                    ],
                },
            },
        },
    },

    // Prefer standard for-loops over range by configuring the built-in LSP.
    // NOTE: The documentation around this syntax is loose and sparse, so thanks
    // https://gist.github.com/mdouchement/eb8684be330a09bebe66dbf91af16516
    "lsp": {
        "gopls": {
            "initialization_options": { "analyses": { "rangeint": false } },
        },
    },

    "tab_size": 4,
    "ui_font_size": 13,
    "base_keymap": "VSCode",
    "buffer_font_size": 12.5,
    "colorize_brackets": true,
    "show_whitespaces": "none",
    "cursor_shape": "underline",
    "search": { "button": false },
    "autosave": "on_focus_change",
    "debugger": { "button": false },
    "buffer_font_family": "SF Mono",
    "git_panel": { "button": false },
    "current_line_highlight": "none",
    "scroll_beyond_last_line": "off",
    "ui_font_family": ".SystemUIFont",
    "outline_panel": { "button": false },
    "notification_panel": { "button": false },
    "collaboration_panel": { "button": false },
    "global_lsp_settings": { "button": false },
    "status_bar": { "experimental.show": false },
    "icon_theme": "Colored Zed Icons Theme Dark",
    "terminal": { "button": false, "cursor_shape": "block" },
    "tabs": { "file_icons": false, "show_diagnostics": "all" },
    "toolbar": { "breadcrumbs": false, "quick_actions": false },
    "diagnostics": { "button": false, "inline": { "enabled": true } },

    "experimental.theme_overrides": {
        // 2B2B2B: Light Grey
        "border": "#2B2B2B",
        "predictive": "#2B2B2B",
        "border.variant": "#2B2B2B",
        "element.hover": "#2B2B2B50",
        "info.background": "#2B2B2B50",
        "element.selected": "#2B2B2B50",
        "element.background": "#2B2B2B50",
        "ghost_element.hover": "#2B2B2B50",
        "ghost_element.selected": "#2B2B2B50",
        "scrollbar.thumb.background": "#2B2B2B",
        "editor.active_line.background": "#2B2B2B50",
        "scrollbar.thumb.hover_background": "#2B2B2B75",
        "scrollbar.thumb.active_background": "#2B2B2B75",

        // 181818: Dark Grey
        "background": "#181818",
        "panel.background": "#181818",
        "tab_bar.background": "#181818",
        "toolbar.background": "#181818",
        "surface.background": "#181818",
        "terminal.background": "#181818",
        "title_bar.background": "#181818",
        "status_bar.background": "#181818",
        "tab.inactive_background": "#181818",
        "editor.subheader.background": "#181818",
        "elevated_surface.background": "#181818",

        // CCCCCC: White
        "text": "#CCCCCC",
        "text.muted": "#CCCCCC90",
        "editor.invisible": "#CCCCCC",
        "editor.foreground": "#CCCCCC",
        "text.placeholder": "#CCCCCC90",
        "terminal.foreground": "#CCCCCC",
        "editor.active_line_number": "#CCCCCC90",

        // 256DF9: Blue
        "drop_target.background": "#256DF950",
        "editor.document_highlight.read_background": "#256DF925",
        "editor.document_highlight.write_background": "#256DF925",
        "editor.document_highlight.bracket_background": "#256DF925",
        "players": [{ "selection": "#256DF950", "cursor": "#256DF9" }],

        // 6E7681: Blue-like
        "hint": "#6E7681",
        "hidden": "#6E768175",
        "ignored": "#6E768175",
        "editor.line_number": "#6E768175",

        // 1C1C1C: Grey
        "editor.background": "#1C1C1C",
        "tab.active_background": "#1C1C1C",
        "editor.gutter.background": "#1C1C1C",

        // 00000000: Transparent
        "scrollbar.track.border": "#00000000",
        "scrollbar.thumb.border": "#00000000",

        // 81B88B: Green
        "created": "#81B88B",
        // C74E39: Red
        "deleted": "#C74E39",
        // E4676B: Light Red
        "conflict": "#E4676B",
        // E2C08D: Yellow
        "modified": "#E2C08D",

        // 569CD6: Blue
        "text.accent": "#569CD6",

        // FFD700: Yellow
        // F456EE: Purple
        // 4999F1: Light Blue
        "accents": ["#FFD700", "#F456EE", "#4999F1"],

        "syntax": {
            "enum": { "color": "#CCCCCC" },
            "title": { "color": "#CCCCCC" },
            "label": { "color": "#CCCCCC" },
            "primary": { "color": "#CCCCCC" },
            "variant": { "color": "#CCCCCC" },
            "emphasis": { "color": "#CCCCCC" },
            "operator": { "color": "#CCCCCC" },
            "constructor": { "color": "#CCCCCC" },
            "punctuation": { "color": "#CCCCCC" },
            "selector.pseudo": { "color": "#CCCCCC" },
            "punctuation.bracket": { "color": "#CCCCCC" },
            "punctuation.special": { "color": "#CCCCCC" },
            "punctuation.delimiter": { "color": "#CCCCCC" },
            "string.special.symbol": { "color": "#CCCCCC" },
            "punctuation.list_marker": { "color": "#CCCCCC" },

            "tag": { "color": "#DCDCAA" },
            "function": { "color": "#DCDCAA" },
            "selector": { "color": "#DCDCAA" },
            "attribute": { "color": "#DCDCAA" },
            "emphasis.strong": { "color": "#DCDCAA" },
            "function.method": { "color": "#DCDCAA" },
            "function.special": { "color": "#DCDCAA" },

            "string": { "color": "#CE9178" },
            "escape": { "color": "#CE9178" },
            "text.literal": { "color": "#CE9178" },
            "string.regex": { "color": "#CE9178" },
            "string.escape": { "color": "#CE9178" },
            "string.special": { "color": "#CE9178" },

            "constant": { "color": "#ADD7ED" },
            "variable": { "color": "#ADD7ED" },
            "property": { "color": "#ADD7ED" },
            "namespace": { "color": "#ADD7ED" },
            "variable.member": { "color": "#ADD7ED" },

            "boolean": { "color": "#C586C0" },
            "constant.builtin": { "color": "#C586C0" },
            "variable.builtin": { "color": "#C586C0" },
            "variable.special": { "color": "#C586C0" },

            "comment": { "color": "#6A9955" },
            "predictive": { "color": "#6A9955" },
            "comment.doc": { "color": "#6A9955" },

            "type": { "color": "#4EC9B0" },
            "lifetime": { "color": "#4EC9B0" },
            "type.builtin": { "color": "#4EC9B0" },

            "keyword": { "color": "#569CD6" },
            "embedded": { "color": "#569CD6" },

            "float": { "color": "#B5CEA8" },
            "number": { "color": "#B5CEA8" },
        },
    },
}
